  <main>
    <p id="notice"></p>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h2>User info</h2>
                
                <% if @user.errors.any? %>
                  <%= @user.errors.count %>errors prohibited this obj from being saved:
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li>
                      <%= message %>
                    </li>
                    <% end %>
                  </ul>
                  <% end %>
                  
                 <%= form_with model: @user do |f| %>
                 
                <div class="form-group">
                 <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control name" %>
                </div>
                
                <div class="form-group">
                 <%= f.label :image %>
                  <%= f.file_field :profile_image, class: "form-control-file user_iamge", accept: "image/*" %>
                </div> 
                
                <div class="form-group">
                  <%= f.label :introduction %>
                  <%=f.text_area :introduction, class: "form-control introduction" %>
                </div>
                
                <div class="form-group">
                  <%= f.submit "Update User", class: "btn btn-secondary" %>
                 <% end %>
                </div>
          </div>
        </div>
      </div>
  </main>